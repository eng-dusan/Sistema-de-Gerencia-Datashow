<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<BorderPane prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #1C1C1C;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.atividade.EquipmentListRegController">
    <top>
        <Label text="LISTA DE EQUIPAMENTOS" style="-fx-text-fill: #FFFFFF; -fx-font-family: 'Segoe UI'; -fx-font-size: 28px; -fx-font-weight: bold;" BorderPane.alignment="CENTER"/>
    </top>
    <left>
        <Region prefHeight="150.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Region prefHeight="150.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <HBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <Button fx:id="backButton" text="Voltar" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px 20px;"/>
            <Button fx:id="deleteButton" text="Excluir" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px 20px;"/>
            <Button fx:id="editButton" text="Editar" style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px 20px;"/>
            <Button fx:id="registerButton" text="Cadastrar" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px 20px;"/>
        </HBox>
    </bottom>
    <center>
        <TableView fx:id="equipmentTable" prefHeight="300.0" prefWidth="660.0" style="-fx-border-color: #2980B9; -fx-background-color: #34495E;">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="70.0" text="ID" style="-fx-text-fill: #ECF0F1;" />
                <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Nome" style="-fx-text-fill: #ECF0F1;" />
                <TableColumn fx:id="descriptionColumn" prefWidth="390.0" text="Descrição" style="-fx-text-fill: #ECF0F1;" />
            </columns>
        </TableView>
    </center>
</BorderPane>
