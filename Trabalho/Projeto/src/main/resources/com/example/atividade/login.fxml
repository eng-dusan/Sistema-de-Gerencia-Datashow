<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #1C1C1C;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.atividade.LoginController">
   <top>
      <Label text="ACESSO AO SISTEMA" style="-fx-text-fill: #FFFFFF; -fx-font-family: 'Segoe UI'; -fx-font-size: 28px; -fx-font-weight: bold;" BorderPane.alignment="CENTER"/>
   </top>
   <left>
      <Region prefHeight="150.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Region prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Region prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <VBox prefHeight="250.0" prefWidth="300.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Usuário" style="-fx-text-fill: #BDC3C7; -fx-font-family: 'Segoe UI'; -fx-font-size: 16px;"/>
            <TextField fx:id="usernameField" promptText="Insira seu usuário" style="-fx-background-color: #2A2A2A; -fx-text-fill: #ECF0F1; -fx-font-size: 14px; -fx-padding: 10px; -fx-border-color: #444;"/>
            <Label text="Senha" style="-fx-text-fill: #BDC3C7; -fx-font-family: 'Segoe UI'; -fx-font-size: 16px;" />
            <PasswordField fx:id="passwordField" promptText="Insira sua senha" style="-fx-background-color: #2A2A2A; -fx-text-fill: #ECF0F1; -fx-font-size: 14px; -fx-padding: 10px; -fx-border-color: #444;"/>

            <HBox spacing="15.0" alignment="CENTER">
               <Button fx:id="forgetPasswordButton" text="Recuperar Senha" style="-fx-background-color: #444; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px;"/>
               <Button fx:id="loginButton" text="Entrar" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px;"/>
            </HBox>

            <HBox alignment="CENTER" spacing="15.0">
               <Button fx:id="exitButton" text="Fechar" style="-fx-background-color: #C0392B; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px;"/>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
