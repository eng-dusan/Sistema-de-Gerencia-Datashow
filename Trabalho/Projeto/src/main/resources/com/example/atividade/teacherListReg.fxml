<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Label?>
<BorderPane prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #1C1C1C;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.atividade.TeacherListRegController">
    <top>
        <Label text="LISTA DE PROFESSORES" style="-fx-text-fill: #FFFFFF; -fx-font-family: 'Segoe UI'; -fx-font-size: 28px; -fx-font-weight: bold;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <TableView fx:id="teacherTable" prefHeight="300.0" prefWidth="600.0" style="-fx-background-color: #1C1C1C; -fx-border-color: #2980B9; -fx-border-radius: 5;">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="150.0" text="ID" style="-fx-text-fill: white;" />
                <TableColumn fx:id="raColumn" prefWidth="150.0" text="RA" style="-fx-text-fill: white;" />
                <TableColumn fx:id="usernameColumn" prefWidth="150.0" text="Nome" style="-fx-text-fill: white;" />
                <TableColumn fx:id="subjectColumn" prefWidth="150.0" text="Disciplina" style="-fx-text-fill: white;" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="15.0" alignment="CENTER" BorderPane.alignment="CENTER">
            <Button fx:id="registerButton" text="Cadastrar" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px;"/>
            <Button fx:id="editButton" text="Editar" style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px;"/>
            <Button fx:id="deleteButton" text="Excluir" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px;"/>
            <Button fx:id="backButton" text="Voltar" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px;"/>
        </HBox>
    </bottom>
</BorderPane>
