<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #1C1C1C;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.atividade.TeacherRegController">
    <top>
        <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-family: 'Segoe UI'; -fx-font-weight: bold;" text="REGISTRAR" />
    </top>
    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="RA:" />
            <TextField fx:id="raField" promptText="Insira o RA" style="-fx-background-color: #2A2A2A; -fx-text-fill: #ECF0F1; -fx-font-size: 14px; -fx-border-color: #444; -fx-background-radius: 5px;" />

            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Nome:" />
            <TextField fx:id="usernameField" promptText="Insira o nome" style="-fx-background-color: #2A2A2A; -fx-text-fill: #ECF0F1; -fx-font-size: 14px; -fx-border-color: #444; -fx-background-radius: 5px;" />

            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Disciplina:" />
            <TextField fx:id="subjectField" promptText="Insira a disciplina" style="-fx-background-color: #2A2A2A; -fx-text-fill: #ECF0F1; -fx-font-size: 14px; -fx-border-color: #444; -fx-background-radius: 5px;" />

            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="backButton" mnemonicParsing="false" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 10px; -fx-padding: 10 20;" text="Voltar" />
                <Button fx:id="registerButton" mnemonicParsing="false" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-background-radius: 10px; -fx-padding: 10 20;" text="Cadastrar" />
            </HBox>
        </VBox>
    </center>
    <left>
        <Region />
    </left>
    <right>
        <Region />
    </right>
    <bottom>
        <Region />
    </bottom>
</BorderPane>
